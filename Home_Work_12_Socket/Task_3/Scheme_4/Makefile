TARGET_SERVER = server
TARGET_CLIENT_TCP = client_tcp
TARGET_CLIENT_UDP = client_udp
SERVER_SOURCE = server.c
CLIENT_SOURCE_TCP = client_tcp.c
CLIENT_SOURCE_UDP = client_udp.c
COMPIELER = gcc

all: $(TARGET_SERVER) $(TARGET_CLIENT_UDP) $(TARGET_CLIENT_TCP)


$(TARGET_SERVER): $(SERVER_SOURCE)
					@$(COMPIELER) $(SERVER_SOURCE) -o $(TARGET_SERVER)

$(TARGET_CLIENT_TCP): $(CLIENT_SOURCE_TCP)
						@$(COMPIELER) $(CLIENT_SOURCE_TCP) -o $(TARGET_CLIENT_TCP)

$(TARGET_CLIENT_UDP): $(CLIENT_SOURCE_UDP)
						@$(COMPIELER) $(CLIENT_SOURCE_UDP) -o $(TARGET_CLIENT_UDP)
